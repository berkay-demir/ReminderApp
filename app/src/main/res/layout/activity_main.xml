<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <EditText
        android:id="@+id/nameText"
        android:layout_width="149dp"
        android:layout_height="62dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="36dp"

        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/birthdayDate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/birthdayDate"
        android:layout_width="236dp"
        android:layout_height="75dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Enter Birthday: dd/mm/yyyy"
        android:inputType="date|datetime"
        app:layout_constraintBottom_toTopOf="@+id/EnterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/surnameText"
        android:layout_width="149dp"
        android:layout_height="62dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="36dp"

        android:ems="10"
        android:hint="Enter Surname"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/birthdayDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nameText" />

    <Button
        android:id="@+id/EnterButton"
        android:layout_width="126dp"
        android:layout_height="66dp"
        android:layout_marginBottom="140dp"
        android:onClick="enterClicked"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="141dp"
        android:layout_height="74dp"
        android:layout_marginBottom="60dp"
        android:onClick="passClicked"
        android:text="PASS THE PAGE"
        app:layout_constraintBottom_toTopOf="@+id/surnameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>